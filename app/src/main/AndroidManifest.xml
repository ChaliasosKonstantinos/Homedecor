<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gr.homedeco.www.homedeco">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Main"
            android:theme="@style/Theme.Design.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AboutUs"
            android:label="Λίγα λόγια"
            android:parentActivityName=".Main" />
        <activity
            android:name=".Cart"
            android:label="Καλάθι"
            android:parentActivityName=".Main" />
        <activity
            android:name=".Chat"
            android:parentActivityName=".Main"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".CheckoutDialog" />
        <activity
            android:name=".CustomProduct"
            android:parentActivityName=".Products"
            android:theme="@style/Theme.Design.Light.NoActionBar" />
        <activity
            android:name=".Login"
            android:label="Είσοδος χρήστη"
            android:parentActivityName=".Main"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ProductDetails"
            android:label="Λεπτομέρειες"
            android:parentActivityName=".GenericProducts"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GenericProducts"
            android:label="Προϊόντα"
            android:parentActivityName=".Products" />
        <activity
            android:name=".Register"
            android:label="Εγγραφή"
            android:parentActivityName=".Login"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ContactUs"
            android:label="Επικοινωνία"
            android:parentActivityName=".Main" />
        <activity
            android:name=".Products"
            android:label="Τύποι Προϊόντων"
            android:parentActivityName=".Main" />
        <activity
            android:name=".OrderCreation"
            android:parentActivityName=".Cart"/>
        <activity
            android:name=".OrderHistory"
            android:label="Ιστορικό Παραγγελιών"
            android:parentActivityName=".Cart"/>
    </application>

</manifest>